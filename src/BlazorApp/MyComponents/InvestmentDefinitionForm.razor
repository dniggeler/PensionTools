@using BlazorApp.ViewModels
@using System.Globalization

<EditForm Model="GenericDefinition">
    <MudGrid>
        <MudItem md="12">
            <MudNumericField Label="Startjahr" Format="n0" @bind-Value="@GenericDefinition.Year" Culture="CultureInfo.InvariantCulture"  />
            <MudNumericField Label="Startbetrag" Format="n0" @bind-Value="@GenericDefinition.InitialAmount" Culture="CultureInfo.InvariantCulture" />
            <MudNumericField Label="Jährlicher Betrag" Format="n0" @bind-Value="@GenericDefinition.RecurrentAmount" Culture="CultureInfo.InvariantCulture" />
            <MudNumericField Label="Wiederholungen" Format="n0" @bind-Value="@GenericDefinition.NumberOfPeriods" Culture="CultureInfo.InvariantCulture" />
        </MudItem>
    </MudGrid>
</EditForm>


@code {
    [Parameter]
    public InvestmentDefinitionViewModel GenericDefinition { get; set; }

    [Parameter]
    public EventCallback<InvestmentDefinitionViewModel> OnChanged { get; set; }

    private void HandleChange()
    {
        OnChanged.InvokeAsync(GenericDefinition);
    }
}