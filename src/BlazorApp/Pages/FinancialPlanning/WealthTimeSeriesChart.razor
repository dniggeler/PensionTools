@using ApexCharts;

@inject IApexChartConfigurator ChartConfigurator

<ApexChart TItem="TimeSeriesPoint"
    Title="@CurveTitle"
    Options="@options"
    FormatYAxisLabel="GetYAxisLabel"
    XAxisType="XAxisType.Datetime"
    Height="450">

    <ApexPointSeries TItem="TimeSeriesPoint"
        Items="@TotalTimeSeries"
        Name="@YAxisTitle"
        SeriesType="SeriesType.Line"
                     OrderBy="@(e => e.X)"
        XValue="@(e => e.XValue)"
        YValue="@(e => e.YValue)"/>
</ApexChart>

@code {
