@using System.Globalization
@using BlazorApp.Features.BvgRevision21.Models

@inject IStringLocalizer<Resource> Localizer

<MudGrid>
    <MudItem md="4">
        <MudTextField Label="Name" Variant="Variant.Text" @bind-Value="@Person.Name" />
    </MudItem>
    <MudItem md="4">
        <MudDatePicker Label="@(Localizer["person.birthdate"])" Editable="true" @bind-Date="@Person.DateOfBirth" DateFormat="dd.MM.yyyy" Placeholder="Wähle Geburtstag" />
    </MudItem>
    <MudItem md="4">
        <GenderSelector Label="Geschlecht" SelectedGender="@Person.Gender" OnSelected="@(arg => Person.Gender = arg)" />
    </MudItem>
    
    <MudItem md="4">
        <MudNumericField Label="BVG Alterguthaben Ende des Jahres" Format="n0" Step="1000" @bind-Value="Person.BvgRetirementCapitalEndOfYear" Culture="CultureInfo.InvariantCulture" />
    </MudItem>
    
    <MudItem md="4">
        <MudNumericField Label="Alterguthaben PK im Schlussalter" Format="n0" Step="1000" @bind-Value="Person.FinalRetirementCapital" Culture="CultureInfo.InvariantCulture" />
    </MudItem>
</MudGrid>

@code {
    [Parameter] public BvgPersonViewModel Person { get; set; }
}