@using Domain.Enums
@using PensionToolsComponentLibrary.Resources

@inject IStringLocalizer<PensionComponents> Localizer

<MudSelect T="Gender?"
           Label="@Label"
           ValueChanged="HandleChange"
           Value="@SelectedGender"
           Required="true">

    <MudSelectItem T="Gender?" Value="Gender.Female">@Localizer["gender.female"]</MudSelectItem>
    <MudSelectItem T="Gender?" Value="Gender.Male">@Localizer["gender.male"]</MudSelectItem>
</MudSelect>

@code {
    [Parameter] public string Label { get; set; }
    [Parameter] public Gender? SelectedGender { get; set; }
    [Parameter] public EventCallback<Gender?> OnSelected { get; set; }

    private async Task HandleChange(Gender? value)
    {
        SelectedGender = value;
        await OnSelected.InvokeAsync(value);
    }
}